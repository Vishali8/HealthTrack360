<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HealthTracker360</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Contact.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PrivacyPolicy.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <header>
        <div class="Logo">
            <strong>HealthTracker360</strong>
        </div>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Features", "Home")">Features</a></li>
                <li><a href="@Url.Action("Demo", "Home")">Demo</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                @if (Session["RecruiterEmail"] == null)
                {
            <li><a href="@Url.Action("Index", "Login")">Login</a></li> }
                        else
                        {
            <li><span style="color:white;">Welcome, @Session["RecruiterEmail"]</span></li>
                            <li><a href="@Url.Action("Index", "Logout")">Logout</a></li>            }
            </ul>
        </nav>
    </header>   
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>
            © 2025 HealthTrack360 |
            <a href="https://github.com/Vishali8/HealthTrack360">GitHub</a> |
            <a href="@Url.Action("PrivacyPolicy","Home")">Privacy Policy</a> |
            @*📧 Contact: <a href="mailto:rvishali1997@gmail.com">rvishali1997@gmail.com</a>*@
        </p>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>