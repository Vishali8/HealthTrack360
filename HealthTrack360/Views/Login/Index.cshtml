@{
    ViewBag.Title = "Recruiter Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Message != null)
{
<p style="color:green; margin-top:1rem;">@ViewBag.Message</p>}
<section class="hero">
    <h1>Recruiter Login</h1>
    <p>Enter your credentials to access HealthTrack360.</p>

    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div class="form-group">
            <label>Email:</label>
            @Html.TextBox("email", null, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Password:</label>
            @Html.Password("password", new { @class = "form-control", required = "required" })
        </div>

        <button type="submit" class="btn primary">Login</button>
        <a href="@Url.Action("Index", "Register")">Create New Account</a>

    }

    @if (ViewBag.Error != null)
    {
        <p style="color:red; margin-top:1rem;">@ViewBag.Error</p>
    }
</section>


