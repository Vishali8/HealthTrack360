@model HealthTrack360.Models.Visit

<h2>Edit Visit details</h2>
<div class="card mb-4">
    <div class="card-header bg-info text-white">
        <strong>Patient Profile</strong>
    </div>
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Patient.FullName</p>
        <p><strong>Gender:</strong> @Model.Patient.Gender</p>
        <p><strong>DOB:</strong> @Model.Patient.DOB.ToShortDateString()</p>
        <p><strong>Contact:</strong> @Model.Patient.ContactNumber</p>
        <p><strong>Email:</strong> @Model.Patient.Email</p>
    </div>
</div>
<form method="post">
    <input type="hidden" name="VisitID" value="@Model.VisitID" />
    <input type="hidden" name="PatientID" value="@Model.PatientID" />

    <div class="form-group">
        <label>VisitDate</label>
        <input type="date" name="VisitDate" value="@Model.VisitDate.ToString("yyyy-MM-dd")" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
        <input type="text" name="Department" value="@Model.Department" class="form-control" required />
    </div>

    <div class="form-group">
        <label>DoctorName</label>
        <input type="text" name="DoctorName" value="@Model.DoctorName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Reason</label>
        <input type="text" name="Reason" value="@Model.Reason" class="form-control" required />
    </div>  

    <button type="submit" class="btn btn-success">Update Visit</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
</form>

