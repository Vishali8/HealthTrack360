@model HealthTrack360.Models.Patient

<h2>Delete Patient</h2>
<div class="alert alert-danger">
    <strong>Warning:</strong> You are about to delete this patient record. This action cannot be undone.
</div>

<table class="table">
    <tr><th>Name</th><td>@Model.FullName</td></tr>
    <tr><th>Gender</th><td>@Model.Gender</td></tr>
    <tr><th>DOB</th><td>@Model.DOB.ToShortDateString()</td></tr>
    <tr><th>Contact</th><td>@Model.ContactNumber</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
</table>

<form method="post" action="@Url.Action("Delete", "Patient", new { id = Model.PatientID })" >
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this patient?');">Confirm Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
</form>
