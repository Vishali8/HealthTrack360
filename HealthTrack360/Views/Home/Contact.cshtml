@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero">
    <h1>Contact HealthTrack360</h1>
    <p>If you have questions, feedback, or need support, feel free to reach out.</p>
</section>

<section class="contact-form">
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label>Name:</label>
            @Html.TextBox("name", null, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Email:</label>
            @Html.TextBox("email", null, new { @class = "form-control", required = "required", type = "email" })
        </div>

        <div class="form-group">
            <label>Message:</label>
            @Html.TextArea("message", null, new { @class = "form-control", required = "required", rows = "5" })
        </div>

        <button type="submit" class="btn primary">Send Message</button>
    }

    @if (ViewBag.Message != null)
    {
        <p style="color:green; margin-top:1rem;">@ViewBag.Message</p>
    }
</section>
